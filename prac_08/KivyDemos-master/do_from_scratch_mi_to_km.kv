BoxLayout:
	orientation: 'vertical'
	BoxLayout:
		orientation: 'horizontal'
		TextInput:
			id: input_number
			text: '34'
			font_size: 48
			multiline: False
		Button:
			id: convert_number
			text: 'Square'
			font_size: 48
			on_press: app.handle_convert_number(int(input_number.text))
		Label:
			id: output_label
			font_size: 48
		BoxLayout:
			orientation: 'vertical'
			Button:
				on_press: app.handle_increase_counter(int(input_number.text))
				text: 'Increase'
			Button:
				on_press: app.handle_decrease_counter(int(input_number.text))
				text: 'Decrease'