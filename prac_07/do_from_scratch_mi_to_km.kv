BoxLayout:
	orientation: 'vertical'
	BoxLayout:
		orientation: 'horizontal'
		TextInput:
			size_hint: None, None
			size: 600, 150
		    id: input_number
            text: ''
            font_size: 48
            multiline: False
            on_text: app.handle_convert_number(input_number.text)
		BoxLayout:
			orientation: 'vertical'
			Button:
				on_press: app.handle_increment(input_number.text, 1)
				text: 'Increase'
			Button:
				on_press: app.handle_increment(input_number.text, -1)
				text: 'Decrease'
