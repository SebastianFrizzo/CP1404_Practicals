BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            size_hint_x: 0.2
            text: 'Clear'
            on_press: app.handle_clear()
        TextInput:
            id: input_name
            text: ''
    BoxLayout:
        orientation: 'horizontal'
        Button:
            size_hint_x: 0.2
            text: 'Calculate'
            on_press: app.handle_grade()
        Label:
            text: 'Enter your percent grade'
            color: (1, 1, 0, 1)
            id: output_label